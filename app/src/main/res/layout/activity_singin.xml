<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Login.SignInActivity">

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Русский(Россия)"
        android:textSize="11dp" />

    <LinearLayout
        android:id="@+id/liner_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="25dp">

        <ImageView
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_logo_instagram" />

        <EditText
            android:maxLength="20"
            android:id="@+id/ed_email_singIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/ed_text_bagraund"
            android:hint="Электронный адрес"
            android:padding="15dp"
            android:textSize="12dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:maxLength="15"
                android:id="@+id/ed_password_singIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/ed_text_bagraund"
                android:hint="Пароль"
                android:padding="15dp"
                android:password="true"
                android:textSize="12dp" />

        </RelativeLayout>

        <LinearLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/bt_sinIn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/blue_92_transparent"
            android:text="Вход"
            android:textAllCaps="false"
            android:textColor="@color/grey_66"
            android:textSize="11dp">

            <TextView
                android:visibility="visible"
                android:id="@+id/tv_singIn"
                android:layout_width="wrap_content"
                android:text="Вход"
                android:textAllCaps="false"
                android:textColor="@color/grey_66"
                android:textSize="11dp"
                android:layout_height="wrap_content"/>

            <ProgressBar
                android:id="@+id/pb_singIn"
                android:layout_width="wrap_content"
                android:indeterminate="true"
                android:visibility="gone"
                android:indeterminateTint="@color/white"
                android:layout_height="28dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Забыли свои учетные данные? "
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/text"
                android:text="Получите помощь со входом в систему "
                android:textColor="@color/blue_92_transparent"
                android:textSize="11dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2"
                android:background="@color/white_92_transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:text="ИЛИ"
                android:textColor="#ACABAB"
                android:textSize="12dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2"
                android:background="@color/white_92_transparent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_faisbook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="6dp"
                android:layout_marginTop="10dp"
                android:text="Войдите через Facebook"
                android:textColor="@color/blue_92"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>


        <Space
            android:layout_width="0dp"
            android:layout_height="10dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_92_transparent" />

        <LinearLayout
            android:id="@+id/liner_perexot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Увас ещё нет аккаунта?"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Зарегистрируйтесь"
                android:textColor="@color/blue_92_transparent"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>