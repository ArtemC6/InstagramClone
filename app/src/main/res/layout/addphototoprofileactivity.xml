<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Activity.AddPhotoToProfileActivity">


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_photo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Добавить фото профиля"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Добавьте фото профиля, по которому вас" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="смогут найти друзья." />


        <androidx.appcompat.widget.AppCompatButton
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/addPhotoProfile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_button_blue"
            android:text="Добавить фото"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/text_next"
            android:layout_width="wrap_content"
            android:text="Пропустить"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textColor="@color/blue_92"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>